<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>

	<definition name="base" template="/WEB-INF/jsp/layout/base.jsp"> 
	  	<put-attribute name="header"    			value="/WEB-INF/jsp/layout/header.jsp" />
	  	<put-attribute name="content" 					value="/WEB-INF/jsp/layout/content.jsp" />
	  	<put-attribute name="footer"    		value="/WEB-INF/jsp/layout/footer.jsp" />
	</definition>
	
	 <definition name="home" extends="base">
        <put-attribute name="body" value="/WEB-INF/jsp/layout/home.jsp" />
     </definition>
     
     <definition name="layout/*" extends="base">
        <put-attribute name="body" value="/WEB-INF/jsp/layout/{1}.jsp" cascade="true"/>
     </definition>
</tiles-definitions>